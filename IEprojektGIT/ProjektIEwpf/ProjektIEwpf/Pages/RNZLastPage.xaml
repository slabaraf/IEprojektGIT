<Page x:Class="ProjektIEwpf.Pages.RNZLastPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjektIEwpf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="635"
      Title="RNZLastPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <TextBox Name="IloscTxtBx" Height="30" Width="50"/>
        <Button Name="ShowResults" Height="30" Width="50" Grid.Column="1" Content="Pokaz" Click="ShowResults_Click"/>
        <ScrollViewer Margin="30,30,30,30" Grid.ColumnSpan="2" Grid.Row="1">
            <StackPanel Name="ResultsWrpPnl" FlowDirection="LeftToRight" Orientation="Vertical" Margin="30" >
            
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
